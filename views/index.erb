<h2>Hello to PizzaShop</h2>

<div class="card-deck">

    <%@products.each do |p|%>

        <div class="col-md-4">
            <img src="<%=p.path_to_image%>" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title"><%=p.title%></h5>
                <p class="card-text"><%=p.description%></p>
                <p class="card-text">Size: <%=p.size%> cm</p>            
                <p class="card-text">Price: <%=p.price%> rub</p>
                <a href="#" class="btn btn-success" onClick="add_to_cart(<%=p.id%>)">Add to cart</a>
            </div>
        </div>

    <%end%>
    
</div>



<script type="text/javascript">
    $(function () 
    {

        update_orders_input();
        update_order_button();

    });

    

</script>

<script type="text/javascript">update_order_button();</script>