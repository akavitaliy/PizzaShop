<h2>Hello to PizzaShop</h2>

<div class="card-deck">

    <%@products.each do |p|%>

        <div class="col-md-4">
            <img src="<%=p.path_to_image%>" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title"><%=p.title%></h5>
                <p class="card-text"><%=p.description%></p>
                <p class="card-text"><%=p.size%></p>            
                <p class="card-text"><%=p.price%></p>
                <a href="#" class="btn btn-primary" onClick="add_to_cart(<%=p.id%>)">add to cart</a>
            </div>
        </div>

    <%end%>
    
</div>