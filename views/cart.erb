<h2>Your Cart:</h2>
<%= @x %>


    <table class="table table-success table-striped">
    
        <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Prace</th>
        <th scope="col">Qty</th>
        </tr>
    </thead>
        <% x = 0 %>
        <% total_price = 0 %>
        <% total_qty = 0 %>

        <% @items.each do |i| %>
            <% x += 1%>
            <tr>
            <th scope="row"><%= x %></th>
            <td><%= i[0].title %></td>
            <td><%= i[0].price %></td>
            <td><%= i[1] %></td>
            </tr>

            <% total_price += i[0].price * i[1].to_i %>
            <% total_qty += i[1].to_i %>
        <%end%> 

        <tr>
            <th scope="row"><%= x %></th>
            <td></td>
            <td>Total: <%= total_price %></td>
            <td><%= total_qty %></td>
            </tr> 
    </table>

    <br>
    <br>
    <button type="button" class="btn btn-success btn-lg" onClick="cart_clean()">Clean Cart</button>

    <br>
    <br>
    <br>
    <br>


<form>
  <div class="form-group" action="/place_order" method="POST">

    <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>" >

    <label for="exampleFormControlInput1">Name:</label>
    <input name="order[name]" type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
  </div>  
  <div class="form-group">
    <label for="exampleFormControlInput1">Phone:</label>
    <input name="order[phone]" type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
  </div>  
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Address:</label>
    <textarea name="order[address]" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-lg">Place this order!</button>
</form>

    